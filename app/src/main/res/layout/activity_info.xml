<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info"
    android:layout_width="wrap_content"
    android:layout_height="550dp"
    android:background="#263242"
    android:visibility="visible"
    tools:visibility="visible">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00AEA9A9"
        android:fontFamily="monospace"
        android:text="Rules &amp; Instructions"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="403dp"
        android:layout_height="20dp"
        android:layout_marginTop="28dp"
        android:fontFamily="monospace"
        android:text="  ➜ Level Difficult is based on range"
        android:textAlignment="textStart"
        android:textColor="#FAF4F4"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:text="  ➜ Input a name to appear on the scoreboards"
        android:textAlignment="textStart"
        android:textColor="#FAF4F4"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/textView9"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:text="  ➜ Your guess must be a valid integer (1-max)"
        android:textAlignment="textStart"
        android:textColor="#FAF4F4"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="399dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:text="  ➜ Your score will increase after each guess                             (the lower your score the better)"
        android:textAlignment="textStart"
        android:textColor="#FAF4F4"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="398dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:text="  ➜ The &quot;Home&quot; button will allow you to reset the game and player"
        android:textAlignment="textStart"
        android:textColor="#FAF4F4"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/textView10"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="402dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:text="  ➜ &quot;Change Level&quot; will keep the same player, but allow you to change difficulty"
        android:textAlignment="textStart"
        android:textColor="#FAF4F4"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="400dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:text="  ➜ &quot;Play Again&quot; allows you to play again by keeping the current name, but clearing score"
        android:textAlignment="textStart"
        android:textColor="#FAF4F4"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="399dp"
        android:layout_height="59dp"
        android:layout_marginTop="40dp"
        android:fontFamily="monospace"
        android:text="HAVE FUN"
        android:textAlignment="center"
        android:textColor="#FAF4F4"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView13"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="406dp"
        android:layout_height="18dp"
        android:layout_marginTop="40dp"
        android:fontFamily="monospace"
        android:text="To exit the help window tap &quot;Help&quot;"
        android:textAlignment="center"
        android:textColor="#FAF4F4"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView14"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />


</androidx.constraintlayout.widget.ConstraintLayout>